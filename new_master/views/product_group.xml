<?xml version="1.0" encoding="utf-8"?>

<odoo>

<record id="view_product_group_tree" model="ir.ui.view">
    <field name="name">product.group.form</field>
    <field name="model">product.group</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="code"/>
            <field name="parent_group"/>
            <field name="group"/>
       </tree>
    </field>
</record>




<record id="view_product_group_form" model="ir.ui.view">
    <field name="name">product.group.form</field>
    <field name="model">product.group</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="parent_group"/>
                            <field name="group"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="view_product_group_search" model="ir.ui.view">
    <field name="name">product.group.form</field>
    <field name="model">product.group</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="code"/>
            <field name="parent_group"/>
            <field name="group"/>
       </search>
    </field>
</record>


