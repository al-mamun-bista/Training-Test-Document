<?xml version="1.0" encoding="utf-8"?>

<odoo>

<!-- Tree view-->

<record id="view_product_group_tree" model="ir.ui.view">
    <field name="name">product.group.form</field>
    <field name="model">product.group</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="code"/>
            <field name="parent_group"/>
       </tree>
    </field>
</record>

<!-- Form view-->


<record id="view_product_group_form" model="ir.ui.view">
    <field name="name">product.group.form</field>
    <field name="model">product.group</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="parent_group"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>

<!-- search view-->

<record id="view_product_group_search" model="ir.ui.view">
    <field name="name">product.group.form</field>
    <field name="model">product.group</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="code"/>
            <field name="parent_group"/>
       </search>
    </field>
</record>


 <record id="action_product_submenu" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.group</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_product_submenu"
            action="action_product_submenu"
            name="Products"
            parent="stock.menu_product_in_config_stock"
            sequence='101'
            />


</odoo>